<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEtecflix.categorias.Drama"
             BackgroundColor="#2f2f30">
    
    <StackLayout Orientation="Vertical">

        <Image x:Name="logo" Style="{StaticResource LogoNaListaDePosters}"/>
        <Label Text="DRAMA" Style=" {StaticResource LabelTextoVermelho}" />

        <ScrollView>

            <Grid Padding="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>

                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>

                </Grid.RowDefinitions>

                <ImageButton Grid.Row="0" 
                                Grid.Column="0" 
                                x:Name="btnAProcuraDaFelicidade" Style=" {StaticResource ButtonPosters} " 
                                Clicked="btnAProcuraDaFelicidade_Clicked"/>

                <ImageButton Grid.Row="0" Grid.Column="1"
                            x:Name="btnOJogoDaImitacao"
                            Style="{StaticResource ButtonPosters}"
                            Clicked="btnOJogoDaImitacao_Clicked"/>

                <ImageButton Grid.Row="1" Grid.Column="1"
                            x:Name="btnNadaDeNovoNoFront"
                            Style="{StaticResource ButtonPosters }"
                            Clicked="btnNadaDeNovoNoFront_Clicked" />


            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>