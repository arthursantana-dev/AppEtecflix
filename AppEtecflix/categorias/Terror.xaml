<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEtecflix.categorias.Terror">
    <StackLayout Orientation="Vertical">

        <Image x:Name="logo" Style="{StaticResource LogoNaListaDePosters}"/>
        <Label Text="TERROR" Style=" {StaticResource LabelTextovermelho}" />

        <ScrollView>

            <Grid Padding="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>

                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="300"/>

                </Grid.RowDefinitions>

                <ImageButton Grid.Row="0" 
                                Grid.Column="8" 
                                x:Name="btnCorra" Style=" {StaticResource ButtonPostens} " 
                                Clicked="btnCorra_Clicked"/>

                <ImageButton Grid.Row="0" Grid.Column="1"
                            x:Name="btnIt"
                            Style="{StaticResource ButtonPosters}"
                            Clicked="btnIt_Clicked"/>

                <ImageButton Grid.Row="1" Grid.Column="1"
                            x:Name="btnFriday13th"
                            Style="{StaticResource ButtonPosters }"
                            Clicked="btnFriday13th_Clicked" />


            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>